    "bcryptjs": "^2.4.3",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "express-session": "^1.17.3",
    "fs-extra": "^11.3.1",
    "mongodb": "^6.9.0",
    "mongoose": "^8.18.3",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "kill-port": "^2.0.1",
    "nodemon": "^3.1.10",
    "wait-on": "^8.0.2"
  }
}
